{
  "manifest_version": 2,
  "name": "Elden Tweet",
  "version": "2.0.0",
  "description": "Shows an Elden Ring banner when you post a tweet on Twitter/X - by dursunator",
  "author": "dursunator",
  "homepage_url": "https://github.com/dursunator/elden-tweet",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Elden Tweet Settings",
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "96": "assets/icon.png"
  },
  "web_accessible_resources": [
    "assets/tweet_sent.png",
    "assets/tweet_sent_blue.png",
    "assets/tweet_sent_red.png",
    "assets/elden_ring_sound.mp3",
    "assets/Matinia.otf"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{e7b84430-dae5-41e6-bb6f-9d01b02c4347}",
      "strict_min_version": "109.0"
    }
  }
}